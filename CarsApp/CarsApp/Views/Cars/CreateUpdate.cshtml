@model CarsApp.Models.Cars.CarsCreateUpdateViewModel

    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>

    <div class="taust">
        @if (Model.Id.HasValue)
        {
            <h1>Update</h1>
        }
        else
        {
            <h1>Create</h1>
        }

        <div>
            <form method="post" enctype="multipart/form-data">
                <input asp-for="Id" type="hidden" />
                <input asp-for="CreatedAt" type="hidden" />
                <input asp-for="UpdatedAt" type="hidden" />

                <div class="form-group row">
                    <label asp-for="Make" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="Make" class="form-control" />
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="Model" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="Model" class="form-control" />
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="Year" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="Year" class="form-control" />
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="Color" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="Color" class="form-control" />
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="Power" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="Power" class="form-control" />
                    </div>
                </div>

                @*<div class="form-group row">
                        <label asp-for="Fuel" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="Fuel" class="form-control" />
                        </div>
                    </div>*@

                @*<div class="form-group row">
                        <label asp-for="Fuel" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <select asp-for="Fuel" class="form-control">
                                <option value="">Select Fuel Type</option>
                                @foreach (var fuelType in Model.AvailableFuelTypes)
                                {
                                    <option value="@fuelType">@fuelType</option>
                                }
                            </select>
                        </div>
                    </div>*@

                <div class="form-group row">
                    <label asp-for="Fuel" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <select id="fuelSelect" asp-for="Fuel" class="form-control">
                            <option value="">Select Fuel Type</option>
                            @foreach (var fuelType in Model.AvailableFuelTypes)
                            {
                                <option value="@fuelType">@fuelType</option>
                            }
                            <option value="Other">Other</option>
                        </select>
                        <input asp-for="OtherFuel" type="text" id="otherFuel" name="OtherFuel" class="form-control" style="display:none;" placeholder="Enter Other Fuel Type">
                    </div>
                </div>

                <script>$(document).ready(function () {
                        function toggleOtherFuel() {
                            if ($("#fuelSelect").val() == "Other") {
                                $("#otherFuel").show();
                            } else {
                                $("#otherFuel").hide();
                            }
                        }

                        toggleOtherFuel();

                        $("#fuelSelect").change(function () {
                            toggleOtherFuel();
                        });
                    });</script>

                <hr />

                @if (Model.Id.HasValue)
                {
                    <input asp-action="update" asp-controller="cars" type="submit" class="btn btn-primary" value="Update" />
                }
                else
                {
                    <input asp-action="create" asp-controller="cars" type="submit" class="btn btn-primary" value="Create" />
                }

                <a asp-action="index" class="btn btn-primary">Back</a>

            </form>
        </div>
    </div>
