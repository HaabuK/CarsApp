@model CarsApp.Models.Cars.CarsDeleteViewModel
    <div class="taust">
        <h1>Delete</h1>

        <div>
            <h4>Cars</h4>
            <hr />
            <dl class="row">
                <div class="form-group row">
                    <label asp-for="Id" class="col-sm-2 col-form-label"></label>
                    @Html.DisplayFor(model => model.Id)
                </div>

                <div class="form-group row">
                    <label asp-for="Make" class="col-sm-2 col-form-label"></label>
                    @Html.DisplayFor(model => model.Make)
                </div>

                @if (System.IO.File.Exists($"wwwroot/Logos/{Model.Make}.png"))
                {
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Logo</label>
                        <img style="background-color:rgba(211,255,254,.3); padding:10px; border-radius:10px; width:200px;" src="/Logos/@(Model.Make).png" alt="Image" />
                    </div>
                }

                <div class="form-group row">
                    <label asp-for="Model" class="col-sm-2 col-form-label"></label>
                    @Html.DisplayFor(model => model.Model)
                </div>

                <div class="form-group row">
                    <label asp-for="Year" class="col-sm-2 col-form-label"></label>
                    @Html.DisplayFor(model => model.Year)
                </div>

                <div class="form-group row">
                    <label asp-for="Color" class="col-sm-2 col-form-label"></label>
                    @Html.DisplayFor(model => model.Color)
                    <div style="width: 70px; height: 20px; display: inline-block; margin-left: 10px; background-color: @Model.Color;"></div>
                </div>

                <div class="form-group row">
                    <label asp-for="Power" class="col-sm-2 col-form-label"></label>
                    @Html.DisplayFor(model => model.Power)
                    KW
                </div>

                <div class="form-group row">
                    <label asp-for="Fuel" class="col-sm-2 col-form-label"></label>
                    @Html.DisplayFor(model => model.Fuel)
                </div>

                <div class="form-group row">
                    <label asp-for="CreatedAt" class="col-sm-2 col-form-label"></label>
                    @Html.DisplayFor(model => model.CreatedAt)
                </div>

                <div class="form-group row">
                    <label asp-for="UpdatedAt" class="col-sm-2 col-form-label"></label>
                    @Html.DisplayFor(model => model.UpdatedAt)
                </div>

                <form asp-action="DeleteConfirmation">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    <a asp-action="Index" asp-controller="cars" class="btn btn-success">Back</a>
                </form>
</div>
    </div>
